{% extends 'main.html.twig' %}

{% block title %}{{ movie.title }}{% endblock %}

{% block content %}
    <div class="container">
        <h1 class="mt-5 mb-4">Авторизация</h1>

        <form action="/signin" method="post">
            <div class="form-group">
                <label for="signup-login">Логин</label>
                <input type="text" name="login" class="form-control" id="signup-login" placeholder="Введите логин">
            </div>

            <div class="form-group">
                <label for="signup-password">Password</label>
                <input type="password" name="password" class="form-control" id="signup-password" placeholder="Введите пароль">
            </div>

            <button type="submit" class="btn btn-primary">Авторизоваться</button>
        </form>
    </div>
{% endblock %}
