{% extends 'main.html.twig' %}

{% block title %}{{ trailers | length }} iTunes Movie trailers{% endblock %}

{% block content %}
    <div class="container">
        <p>Current Date Time: {{ currentTime | date }}</p>
        <p>Controller Class: {{ controllerClass }}</p>
        <p>Controller Method: {{ controllerMethod }}</p>

        <h1 class="mt-5 mb-4">
            {{ trailers | length }} iTunes Movie trailers |

            {% if user %}
                Вы вошли как: {{ user.name }}, <a href="/logout">Выйти</a>
            {% else %}
                <a href="/signin">Авторизоваться</a>
            {% endif %}
        </h1>
        <table class="table table-bordered">
            {% for trailer in trailers %}
                <tr>
                    <td>
                        <img src="{{ trailer.image }}" />
                    </td>
                    <td>
                        <a href="/movies/{{ trailer.id }}">
                            {{ trailer.title }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
